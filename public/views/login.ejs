<%- include("partials/layout-top", { title: "Login" }) %>

<section class="card page-head">
  <h2>Login</h2>
  <p>Sign in as administrator or normal user.</p>
</section>

<section class="card">
  <% if (error) { %>
    <p class="muted"><%= error %></p>
  <% } %>

  <form class="form-grid" method="post" action="/login">
    <input type="hidden" name="next" value="<%= next || '/' %>">

    <div class="field">
      <label for="email">Email</label>
      <input id="email" name="email" type="email" required placeholder="admin@local">
    </div>

    <div class="field">
      <label for="password">Password</label>
      <input id="password" name="password" type="password" required placeholder="Enter password">
    </div>

    <div class="actions">
      <button class="btn" type="submit">Login</button>
      <a class="btn secondary" href="/register">Register</a>
    </div>
  </form>

